<UserControl x:Class="DoAnXinViec.UCLich"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnXinViec"
             mc:Ignorable="d" 
             d:DesignHeight="115" d:DesignWidth="170" BorderThickness="0.5" UseLayoutRounding="True" Background="White">
    <Grid Height="115" Width="170">
        <Label x:Name="lblNgay"  Height="20" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Padding="0,0,0,0"/>
        <ListView x:Name="listLichPhongVan" Margin="0,20,0,0" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label x:Name="lblPV" Content="{Binding TenBuoiPV}" MouseDoubleClick="lblPV_MouseDoubleClick" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
