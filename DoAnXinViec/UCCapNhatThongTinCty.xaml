                    Text="{Binding MaSoThue, Mode=TwoWay}"
                    materialDesign:HintAssist.Background="White"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Mã số thuế"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="585" Height="40" HorizontalAlignment="Left" Margin="665,280,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <TextBox
                    Text="{Binding HoTen, Mode=TwoWay}"
                    materialDesign:HintAssist.Background="White"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Họ và Tên"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="40" Margin="40,280,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14" HorizontalAlignment="Left" Width="585"/>
            <TextBox
                    Text="{Binding Email,Mode=TwoWay}"
                    materialDesign:HintAssist.Background="White"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Email"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="280" Height="40" HorizontalAlignment="Left" Margin="40,340,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <TextBox
                    Text="{Binding SDT,Mode=TwoWay}"
                    materialDesign:HintAssist.Background="White"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Số điện thoại"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="280" Height="40" HorizontalAlignment="Left" Margin="345,340,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <TextBox
                Text="{Binding GT, Mode=TwoWay}"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                materialDesign:HintAssist.Background="White"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Giới thiệu công ty"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="585" Height="160" HorizontalAlignment="Left" Margin="665,400,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <Border HorizontalAlignment="Left" Height="100" Margin="665,580,0,0" VerticalAlignment="Top" Width="585" BorderBrush="Black" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5">
                <WrapPanel>
                    <Border Width="98" Height="98" CornerRadius="100" Background="Silver" BorderThickness="10,10,10,10">
                        <Button x:Name="btnThemAnh" Style="{StaticResource ResourceKey=MaterialDesignFlatButton}" Width="50" Height="50" FontSize="72" Padding="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" Click="btnThemAnh_Click">
                            <Button.Background>
                                <ImageBrush ImageSource="/—Pngtree—vector plus icon_3989579.png"/>
                            </Button.Background>
                        </Button>
                    </Border>
                    <materialDesign:Card HorizontalAlignment="Center" VerticalAlignment="Center" Background="{x:Null}" Width="479">
                        <ScrollViewer HorizontalScrollBarVisibility="Visible" Width="491" Height="98" VerticalScrollBarVisibility="Hidden" >
                            <StackPanel x:Name="stAnh" Orientation="Horizontal"/>
                        </ScrollViewer>
                    </materialDesign:Card>

                </WrapPanel>
            </Border>
        </Grid>
