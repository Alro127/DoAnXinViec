                materialDesign:HintAssist.Background="White"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Giấy phép kinh doanh"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="585" Height="40" HorizontalAlignment="Left" Margin="665,340,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <Button x:Name="btnLuu" Content="Lưu" Margin="0,0,40,40" BorderBrush="#FF2A8DD3" HorizontalAlignment="Right" Width="150" Background="White" Foreground="#DD000000" Height="40" VerticalAlignment="Bottom"/>
            <Button Content="Hủy" Margin="0,0,220,40" BorderBrush="{x:Null}" HorizontalAlignment="Right" Width="150" Height="40" VerticalAlignment="Bottom">
                <Button.Background>
                    <SolidColorBrush Color="#FF2A8DD3" Opacity="0.3"/>
                </Button.Background>
            </Button>
            <TextBox
                Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
                materialDesign:HintAssist.Background="White"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Tên đăng nhập"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="399" Height="40" HorizontalAlignment="Left" Margin="665,110,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <PasswordBox x:Name="pwMatKhau" 
                materialDesign:HintAssist.Background="White"
                Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" materialDesign:HintAssist.Hint="Mật khẩu"
                HorizontalAlignment="Left" Height="40" Margin="665,170,0,0" VerticalAlignment="Top" Width="399" Padding="10,10,10,10" FontSize="14"/>
            <Button Content="Sửa" Height="40" Margin="0,110,40,0" VerticalAlignment="Top" BorderBrush="#FF2A8DD3" HorizontalAlignment="Right" Width="150" Background="White" Foreground="#DD000000"/>
            <Button x:Name="btnDoiMatKhau" Content="Sửa" Height="40" Margin="0,170,40,0" VerticalAlignment="Top" BorderBrush="#FF2A8DD3" HorizontalAlignment="Right" Width="150" Background="White" Foreground="#DD000000" Click="btnDoiMatKhau_Click"/>
