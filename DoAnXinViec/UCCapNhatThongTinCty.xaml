                 materialDesign:HintAssist.Background="White"
                 VerticalAlignment="Top"
                 materialDesign:HintAssist.Hint="Quy mô nhân sự"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="280" Height="40" HorizontalAlignment="Right" Margin="0,460,665,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <ComboBox 
                Text="{Binding TinhThanh, Mode=TwoWay}"
                HorizontalAlignment="Right" Height="40" Margin="0,520,665,0" VerticalAlignment="Top" Width="585"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                materialDesign:HintAssist.Background="White"
                materialDesign:HintAssist.Hint="Tỉnh/ Thành Phố" Padding="10,10,10,10" FontSize="14">
                <Label Content="An Giang" Foreground="#555" FontSize="14"/>
                <Label Content="Bà Rịa - Vũng Tàu" Foreground="#555" FontSize="14"/>
