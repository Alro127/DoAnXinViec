                    Text="{Binding TenCT, Mode=TwoWay}"
                    materialDesign:HintAssist.Background="White"
                    VerticalAlignment="Top"
                    materialDesign:HintAssist.Hint="Tên công ty"
                    Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="585" Height="40" HorizontalAlignment="Left" Margin="40,400,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
