<Window x:Class="DoAnXinViec.WDangNhap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAnXinViec"
        mc:Ignorable="d"
        Title="WDangNhap" Height="450" Width="800">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/—Pngtree—starry sky galaxy space background_2269978.png"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Center" Height="325" VerticalAlignment="Center" Width="392">
            <Border CornerRadius="10" BorderThickness="1" HorizontalAlignment="Center" Height="305" VerticalAlignment="Center" Width="372">
                <Border.Background>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </Border.Background>

            </Border>
            <TextBox Style="{DynamicResource TBstyle}" 
                     HorizontalAlignment="Center" Height="32" TextWrapping="Wrap" 
                     Tag="Tên đăng nhập" Width="276" BorderBrush="Black" RenderTransformOrigin="0.5,0.5" Margin="0,162,0,0" VerticalAlignment="Top">
                <TextBox.Background>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </TextBox.Background>
            </TextBox>
            <PasswordBox Style="{DynamicResource PWBstyle}" Password="Mật khẩu" HorizontalAlignment="Center" Height="32" VerticalAlignment="Top" Width="274" Margin="0,199,0,0" BorderBrush="#FF060606">
                <PasswordBox.Background>
                    <SolidColorBrush Color="#FF060606" Opacity="0.5"/>
                </PasswordBox.Background>
            </PasswordBox>
            <Button Style="{DynamicResource ButtonStyleBoGoc}" Content="Đăng nhập" HorizontalAlignment="Center" Height="36" Margin="0,236,0,0" VerticalAlignment="Top" Width="276" Foreground="#FFFCFCFC" FontFamily="Segoe UI Black" FontSize="18">
                <Button.Background>
                    <SolidColorBrush Color="#FF560C81" Opacity="0.7"/>
                </Button.Background>
                <Button.BorderBrush>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </Button.BorderBrush>
            </Button>
        </Grid>
        
    </Grid>
</Window>
