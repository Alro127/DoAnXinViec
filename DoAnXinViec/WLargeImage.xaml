<Window x:Class="DoAnXinViec.WLargeImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAnXinViec"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="WLargeImage" Height="450" Width="800">
    <Grid>
        <Image x:Name="largeImageView" Stretch="Uniform"/>
        <materialDesign:PackIcon x:Name="btnRight" Kind="ChevronRight" Height="434" VerticalAlignment="Center" Width="50" HorizontalAlignment="Right" MouseLeftButtonDown="btnRight_MouseLeftButtonDown"/>
        <materialDesign:PackIcon x:Name="btnLeft" Kind="ChevronLeft" Height="434" VerticalAlignment="Center" Width="50" HorizontalAlignment="Left" MouseLeftButtonDown="btnLeft_MouseLeftButtonDown"/>    </Grid>
</Window>
