                    <Label Content="Vĩnh Phúc" Foreground="#555" FontSize="14"/>
                    <Label Content="Yên Bái" Foreground="#555" FontSize="14"/>
                </ComboBox>
                <TextBox x:Name="txtDiaChi"
                    Text="{Binding DiaChi, Mode=TwoWay}"
                     FontSize="14"
                     Width="666"
                     Height="55"
                     Foreground="#555"
                     Padding="10,20,0,0"
                     materialDesign:HintAssist.Hint="Địa chỉ"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <TextBox x:Name="txtLink"
                    Text="{Binding Link, Mode=TwoWay}"
                     FontSize="14"
                     Width="666"
                     Height="55"
                     Foreground="#555"
                     Padding="10,20,0,0"
                     materialDesign:HintAssist.Hint="Đường link công ty"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <TextBox x:Name="txtMaSoThue"
                    Text="{Binding MaSoThue, Mode=TwoWay}"
                     FontSize="14"
                     Width="666"
                     Height="55"
                     Foreground="#555"
                     Padding="10,20,0,0"
                     materialDesign:HintAssist.Hint="Mã số thuế"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <TextBox x:Name="txtGPKD"
                    Text="{Binding GPKD, Mode=TwoWay}"
                     FontSize="14"
                     Width="666"
                     Height="55"
                     Foreground="#555"
                     Padding="10,20,0,0"
                     materialDesign:HintAssist.Hint="Giấy phép kinh doanh"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            </StackPanel>

        </GroupBox>
        <Border CornerRadius="10" BorderThickness="1" HorizontalAlignment="Right" Height="376" VerticalAlignment="Top" Width="716" Margin="0,356,50,0">
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
        </Border>
        <GroupBox   
            Margin="0,315,49,0"
            materialDesign:ColorZoneAssist.Background="Transparent"
            materialDesign:ColorZoneAssist.Foreground="Gray"
            materialDesign:ColorZoneAssist.Mode="Custom"
            Header="Giới thiệu công ty" 
            Style="{StaticResource MaterialDesignGroupBox}" FontSize="16" FontWeight="Bold" Height="420" VerticalAlignment="Top" HorizontalAlignment="Right" Width="716">
            <TextBox x:Name="txtGT"
                Text="{Binding GT, Mode=TwoWay}"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                materialDesign:HintAssist.Background="White"
                Foreground ="#555"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}" Width="687" HorizontalAlignment="Left" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14" Margin="0,0,0,0"/>
        </GroupBox>
        <Label 
            Content="ĐĂNG KÝ NHÀ TUYỂN DỤNG" Margin="620,35,620,729" FontSize="22" FontWeight="Bold" Foreground="Gray"/>
        <Button x:Name="btnDangKy" Content="Đăng ký" Margin="1415,0,0,25" VerticalAlignment="Bottom" Click="btnDangKy_Click" HorizontalAlignment="Left" Width="86" Background="#FF2A8DD3"/>

