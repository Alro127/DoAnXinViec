            <TextBox x:Name="txtTenCV"
                materialDesign:HintAssist.Background="White"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Tên công việc"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="585" Height="40" HorizontalAlignment="Left" Margin="40,100,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14" KeyUp="txtTenCV_KeyUp"/>
            <TextBox x:Name="txtMoTaCV"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                materialDesign:HintAssist.Background="White"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Mô tả công việc"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="585" Height="390" HorizontalAlignment="Right" Margin="0,340,665,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <ComboBox x:Name="cbLuong" HorizontalAlignment="Left" Height="40" Margin="40,160,0,0" Width="585"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                IsEditable="True"
                materialDesign:HintAssist.Background="White"
                materialDesign:HintAssist.Hint="Mức lương" Padding="10,10,10,10" FontSize="14" VerticalAlignment="Top" KeyUp="cbLuong_KeyUp" SelectionChanged="cbLuong_SelectionChanged">
                <Label Content="5000000" Foreground="Black" FontSize="14"/>
                <Label Content="10000000" Foreground="Black" FontSize="14"/>
                <Label Content="15000000" Foreground="Black" FontSize="14"/>
                <Label Content="20000000" Foreground="Black" FontSize="14"/>
                <Label Content="30000000" Foreground="Black" FontSize="14"/>
            </ComboBox>
            <DatePicker x:Name="dtpNgayToiHan" HorizontalAlignment="Right" Height="40" Margin="0,280,665,0" VerticalAlignment="Top" Width="585"
                Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                materialDesign:HintAssist.Background="White"
                materialDesign:HintAssist.Hint="Ngày tới hạn" Padding="10,10,10,10" FontSize="14"/>
            <ComboBox x:Name="cbDiaDiem" HorizontalAlignment="Right" Height="40" Margin="0,220,665,0" VerticalAlignment="Top" Width="585"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                materialDesign:HintAssist.Background="White"
                materialDesign:HintAssist.Hint="Địa điểm làm việc" Padding="10,10,10,10" FontSize="14" SelectionChanged="cbDiaDiem_SelectionChanged">
