                <Label Content="Vĩnh Phúc" Foreground="Black" FontSize="14"/>
                <Label Content="Yên Bái" Foreground="Black" FontSize="14"/>
            </ComboBox>
            <TextBox x:Name="txtYeuCau"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                materialDesign:HintAssist.Background="White"
                VerticalAlignment="Top"
                materialDesign:HintAssist.Hint="Yêu cầu"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="585" Height="200" HorizontalAlignment="Left" Margin="665,340,0,0" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <TextBox x:Name="txtQuyenLoi"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                materialDesign:HintAssist.Background="White"
                VerticalAlignment="Bottom"
                materialDesign:HintAssist.Hint="Quyền lợi"
                Style="{StaticResource MaterialDesignOutlinedTextBox}" Width="585" Height="180" HorizontalAlignment="Left" Margin="665,0,0,40" Padding="10,10,10,10" VerticalContentAlignment="Stretch" Background="{x:Null}" FontSize="14"/>
            <Button x:Name="btnDang" Content="Đăng" HorizontalAlignment="Right" Height="40" Margin="0,40,40,0" VerticalAlignment="Top" Width="140" Click="btnDang_Click"/>
            <ComboBox x:Name="cbKinhNghiem" HorizontalAlignment="Left" Height="40" Margin="40,220,0,0" Width="280"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                IsEditable="True"
                materialDesign:HintAssist.Background="White"
                materialDesign:HintAssist.Hint="Kinh Nghiệm" Padding="10,10,10,10" FontSize="14" VerticalAlignment="Top"  SelectionChanged="cbKinhNghiem_SelectionChanged">
                <Label Content="Không yêu cầu" Foreground="Black" FontSize="14"/>
                <Label Content="Dưới 1 năm" Foreground="Black" FontSize="14"/>
                <Label Content="1 năm" Foreground="Black" FontSize="14"/>
                <Label Content="2 năm" Foreground="Black" FontSize="14"/>
                <Label Content="3 năm " Foreground="Black" FontSize="14"/>
                <Label Content="4 năm" Foreground="Black" FontSize="14"/>
                <Label Content="5 năm" Foreground="Black" FontSize="14"/>
                <Label Content="Trên 5 năm " Foreground="Black" FontSize="14"/>
            </ComboBox>
            <ComboBox x:Name="cbLinhVuc" HorizontalAlignment="Right" Height="40" Margin="0,160,970,0" VerticalAlignment="Top" Width="280"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                materialDesign:HintAssist.Background="White"
                materialDesign:HintAssist.Hint="Lĩnh vực" Padding="10,10,10,10" FontSize="14">
                <Label Content="Sản xuất và chế biến" Foreground="#555" FontSize="14"/>
                <Label Content="Tài chính - Ngân hàng" Foreground="#555" FontSize="14"/>
                <Label Content="Kiến trúc và xây dựng" Foreground="#555" FontSize="14"/>
                <Label Content="Kinh doanh" Foreground="#555" FontSize="14"/>
                <Label Content="Công nghệ thông tin" Foreground="#555" FontSize="14"/>
                <Label Content="Luật - Nhân văn" Foreground="#555" FontSize="14"/>
                <Label Content="Nghệ thuật - Thẩm mỹ - Đồ họa" Foreground="#555" FontSize="14"/>
                <Label Content="Báo chí - Khoa học xã hội" Foreground="#555" FontSize="14"/>
                <Label Content="Khoa học cơ bản" Foreground="#555" FontSize="14"/>
                <Label Content="Sư phạm" Foreground="#555" FontSize="14"/>
                <Label Content="Nông - Lâm - Ngư nghiệp" Foreground="#555" FontSize="14"/>
            </ComboBox>
            <local:UCDon x:Name="ucDon" Margin="740,140,110,520"/>
        </Grid>
    </Border>
</UserControl>
