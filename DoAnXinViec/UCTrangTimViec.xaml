<UserControl x:Class="DoAnXinViec.UCTrangTimViec"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnXinViec"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1350">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="147" Margin="0,10,0,0" VerticalAlignment="Top" Width="1348">
            <Button Style="{DynamicResource ButtonStyleBoGoc}" Content="Đăng Nhập" Margin="1197,26,10,73" FontSize="16" FontFamily="Segoe UI Black" Background="#FF560C81" Foreground="#FFF6F0F0" BorderBrush="{x:Null}"/>
            <Button Style="{DynamicResource ButtonStyleBoGoc}" Content="Đăng Ký" Margin="1051,26,156,73" FontSize="16" FontFamily="Segoe UI Black" Background="White" Foreground="#FF080E14" BorderBrush="{x:Null}"/>
            <TextBox Style="{DynamicResource TBstyle}" Height="32" TextWrapping="Wrap" 
             Tag="Tìm kiếm" Width="1001" BorderBrush="Black" RenderTransformOrigin="0,0.5" Margin="10,34,0,0" VerticalAlignment="Top">
                <TextBox.Background>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </TextBox.Background>
            </TextBox>
        </Grid>
        <Grid Margin="0,150,0,50">
            <Border CornerRadius="10" BorderBrush="Black">
                <Border.Background>
                    <SolidColorBrush Color="Black" Opacity="0.3"/>
                </Border.Background>
                <WrapPanel HorizontalAlignment="Center" Height="584" VerticalAlignment="Center" Width="1328">
                    <local:UCDon/>
                    <local:UCDon/>
                    <local:UCDon/>
                </WrapPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
