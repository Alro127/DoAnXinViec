             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnXinViec"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1350">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="147" Margin="0,10,0,0" VerticalAlignment="Top" Width="1282">
            <TextBox x:Name="txtTimKiem" Style="{DynamicResource TBstyle}" Height="32" TextWrapping="Wrap" Foreground="#555"
