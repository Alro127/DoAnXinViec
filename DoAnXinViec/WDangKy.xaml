<Window x:Class="DoAnXinViec.WDangKy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAnXinViec"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="WDangKy" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="432" VerticalAlignment="Center" Width="390" Background="White" Margin="408,0,0,0">
            <TextBox
                 x:Name="txtTenDangNhap"
                 FontSize="16"
                 Width="342"
                 Height="42"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center"
                 Foreground="#555"
                 Padding="10,8,0,0"
                 materialDesign:HintAssist.Hint="Tên đăng nhập"
                materialDesign:HintAssist.Background="White"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}" Margin="0,138,0,0" />
            <PasswordBox
                    x:Name="txtMatKhau"
                    FontSize="16"
                    Width="342"
                    Height="42"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Padding="10,8,0,0"               
                    materialDesign:HintAssist.Hint="Mật khẩu"
                    Foreground="#555"
                    materialDesign:PasswordBoxAssist.Password="{Binding Password2, Mode=TwoWay}"
                    materialDesign:HintAssist.Background="White"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}" Margin="0,189,0,0" />
            <PasswordBox
                    x:Name="txtXacNhanMatKhau"
                    FontSize="16"
                    Width="342"
                    Height="42"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Padding="10,8,0,0"               
                    materialDesign:HintAssist.Hint="Xác nhận lại mật khẩu"
                    Foreground="#555"
                    materialDesign:PasswordBoxAssist.Password="{Binding Password2, Mode=TwoWay}"
                    materialDesign:HintAssist.Background="White"
                    Style="{StaticResource MaterialDesignOutlinedPasswordBox}" Margin="0,240,0,0" />
            <Button x:Name="btnDangKyUngVien" Style="{DynamicResource ButtonStyleBoGoc}" Content="Đăng ký ứng tuyển" HorizontalAlignment="Center" Height="36" Margin="0,302,0,0" VerticalAlignment="Top" Width="342" Foreground="#FFFCFCFC" FontFamily="Segoe UI Black" FontSize="18" Click="btnDangKyUngVien_Click">
                <Button.Background>
                    <SolidColorBrush Color="#FF2A8DD3" Opacity="0.7"/>
                </Button.Background>
                <Button.BorderBrush>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </Button.BorderBrush>
            </Button>
            <Button x:Name="btnDangKyCongTy" Style="{DynamicResource ButtonStyleBoGoc}" Content="Đăng ký công ty" HorizontalAlignment="Center" Height="36" VerticalAlignment="Top" Width="342" Foreground="#FF2A8DD3" FontFamily="Segoe UI Black" FontSize="18" Margin="0,355,0,0" Click="btnDangKyCongTy_Click">
                <Button.Background>
                    <SolidColorBrush Color="#FFDDD8CF" Opacity="0.7"/>
                </Button.Background>
                <Button.BorderBrush>
                    <SolidColorBrush Color="Black" Opacity="0.5"/>
                </Button.BorderBrush>
            </Button>
            <Label Content="Đăng ký" HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
        </Grid>
        <Image HorizontalAlignment="Left" Height="434" VerticalAlignment="Top" Width="410" Stretch="UniformToFill" Source="/—Pngtree—starry sky galaxy space background_2269978.png"/>
    </Grid>
</Window>